/** 
 * Dùng hàm average tính điểm trung bình 3 môn của một học sinh.
 * Làm tròn điểm trung bình
 * Ví dụ: [8, 8, 6.75]  => 8
 * Gợi ý: Dùng Math.round 
*/

function average(arr) {
  // your code here!
  var sum = arr.reduce(function(x, y){
      return x + y;
  }, 0);
  
  return Math.round(sum/arr.length);
}

